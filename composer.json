{
  "name": "masyasmv/aton-statement-parser",
  "description": "Parser and normalizer for ATON broker XML statements. Converts raw XML reports into structured DTOs for convenient data access.",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "aton",
    "broker",
    "statement",
    "report",
    "xml",
    "parser",
    "dto",
    "finance"
  ],
  "homepage": "https://github.com/MasyaSmv/aton-statement-parser",
  "support": {
    "issues": "https://github.com/MasyaSmv/aton-statement-parser/issues",
    "source": "https://github.com/MasyaSmv/aton-statement-parser"
  },
  "authors": [
    {
      "name": "MasyaSmv",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-dom": "*",
    "ext-libxml": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "friendsofphp/php-cs-fixer": "^3.60",
    "phpstan/phpstan": "^1.11",
    "vimeo/psalm": "^5.26"
  },
  "autoload": {
    "psr-4": {
      "MasyaSmv\\AtonStatementParser\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MasyaSmv\\AtonStatementParser\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-text",
    "cs:check": "php-cs-fixer fix --diff --dry-run --allow-risky=yes",
    "cs:fix": "php-cs-fixer fix --allow-risky=yes",
    "stan": "phpstan analyse -c phpstan.neon",
    "psalm": "psalm --no-cache"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
